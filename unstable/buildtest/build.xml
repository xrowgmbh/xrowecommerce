<?xml version="1.0"?>
<project name="eZWebin" default="all">

    <description>eZWebin packages build file</description>

    <mkdir dir="build"/>

    <!-- ================== -->
    <!-- dynamic properties -->
    <!-- ================== -->

    <!-- current year -->
    <tstamp>
        <format property="date.current.year" pattern="yyyy"/>
    </tstamp>

    <!-- ========================= -->
    <!-- end of dynamic properties -->
    <!-- ========================= -->

    <!-- ================= -->
    <!-- static properties -->
    <!-- ================= -->

    <property name="ezwebin.build.dir" location="build"/>
    <property file="./ant/ezwebin.properties"/>

    <!-- ======================== -->
    <!-- end of static properties -->
    <!-- ======================== -->

    <!-- ============================= -->
    <!-- high level ( public ) targets -->
    <!-- ============================= -->

    <!-- Shows the list of properties used for building this extension -->
    <!-- Anytime the ezwebin.properties file is update, this target must  -->
    <!-- me update as well                                             -->
    <target name="infos">
        <echo message="EZWEBIN BUILD INFORMATIONS"/>
        <echo message="--------------------------"/>
        <echo message="ezwebin.version.major          : ${ezwebin.version.major}"/>
        <echo message="ezwebin.version.minor          : ${ezwebin.version.minor}"/>
        <echo message="ezwebin.version.release        : ${ezwebin.version.release}"/>
        <echo message="ezwebin.version.alias          : ${ezwebin.version.alias}"/>
        <echo message="ezwebin.svn.trunk.packages.url : ${ezwebin.svn.trunk.packages.url}"/>
        <echo message="php.cli.executable.path        : ${php.cli.executable.path}"/>
        <echo message="ezp.version.major              : ${ezp.version.major}"/>
        <echo message="ezp.version.minor              : ${ezp.version.minor}"/>
        <echo message="ezp.version.release            : ${ezp.version.release}"/>
        <echo message="ezp.version.alias              : ${ezp.version.alias}"/>
    </target>

    <!-- Displays a warning before building the extension        -->
    <!-- Also waits for 5 seconds before starting the real build -->
    <!-- This makes it possible to interrupt the script before   -->
    <!-- any real task is done                                   -->
    <target name="warning" depends="infos">
        <echo message="Please check informations defined above are correct"/>
        <echo message="If not feel free to update the ant/ezwebin.properties file"/>
        <echo message="This script will wait for 5 seconds before it starts"/>

        <sleep seconds="5"/>
    </target>

    <!-- Prepares the build                               -->
    <!-- Runs an svn export of the extension's repository -->
    <target name="init" depends="warning">
        <exec executable="svn" failonerror="true">
            <arg value="export"/>
            <arg value="${ezwebin.svn.trunk.packages.url}"/>
            <arg value="${ezwebin.build.dir}/packages"/>
        </exec>
    </target>

    <!-- builds the extension -->
    <target name="build" depends="init">
        <antcall target="run-ezpxmlfilelist-php">
            <param name="extension.name"       value="ezwebin_extension"/>
            <param name="extension.short.name" value="ezwebin"/>
        </antcall>

        <antcall target="update-package-xml"/>
        <antcall target="update-ezinfo-php"/>
        <antcall target="update-license-headers"/>
    </target>

    <!-- building eZWebsiteToolbar as a dependency -->
    <target name="build-externals">
        <!-- eZWebsiteToolbar -->
        <antcall target="-build-external">
            <param name="external.dependancy.build.file.url"
                   value="${external.dependancy.ezwt.svn.trunk.build.file.url}"/>

            <param name="external.dependancy.properties.file.url"
                   value="${external.dependancy.ezwt.properties.file.url}"/>

            <param name="external.dependancy.properties.file.name"
                   value="${external.dependancy.ezwt.properties.file.name}"/>
        </antcall>

        <!-- eZJSCore -->
        <antcall target="-build-external">
            <param name="external.dependancy.build.file.url"
                   value="${external.dependancy.ezjscore.svn.trunk.build.file.url}"/>

            <param name="external.dependancy.properties.file.url"
                   value="${external.dependancy.ezjscore.properties.file.url}"/>

            <param name="external.dependancy.properties.file.name"
                   value="${external.dependancy.ezjscore.properties.file.name}"/>
        </antcall>

        <!-- eZGmapLocation -->
        <antcall target="-build-external">
            <param name="external.dependancy.build.file.url"
                   value="${external.dependancy.ezgmaplocation.svn.trunk.build.file.url}"/>

            <param name="external.dependancy.properties.file.url"
                   value="${external.dependancy.ezgmaplocation.properties.file.url}"/>

            <param name="external.dependancy.properties.file.name"
                   value="${external.dependancy.ezgmaplocation.properties.file.name}"/>
        </antcall>

        <!-- eZStarrating -->
        <antcall target="-build-external">
            <param name="external.dependancy.build.file.url"
                   value="${external.dependancy.ezstarrating.svn.trunk.build.file.url}"/>

            <param name="external.dependancy.properties.file.url"
                   value="${external.dependancy.ezstarrating.properties.file.url}"/>

            <param name="external.dependancy.properties.file.name"
                   value="${external.dependancy.ezstarrating.properties.file.name}"/>
        </antcall>

    </target>

    <!-- Meta target, calls build and dist -->
    <target name="all" depends="build,dist,build-externals"/>

    <!-- creates all the tarballs for packages -->
    <target name="dist">
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_banners"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_classes"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_democontent"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_democontent_clean"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_design_blue"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_design_gray"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_design_cleangray"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_extension"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_site"/></antcall>
        <antcall target="create-package-tarball"><param name="package.name" value="ezwebin_site_clean"/></antcall>
    </target>

    <!-- Cleans the generated tarball by dist-->
    <target name="distclean">
        <delete includeemptydirs="true">
            <fileset dir="${ezwebin.build.dir}" includes="**/*.ezpkg"/>
        </delete>
    </target>

    <!-- Purge everything in the build directory -->
    <!-- Also remove the build directory         -->
    <target name="cleanall" depends="distclean">
        <delete dir="${ezwebin.build.dir}"/>
    </target>

    <!-- ==================================== -->
    <!-- end of high level ( public ) targets -->
    <!-- ==================================== -->

    <!-- ====================================================== -->
    <!-- low level ( private ) targets, for internal usage ONLY -->
    <!-- ====================================================== -->

    <target name="update-package-xml">
        <echo message="Updating package.xml with correct version numbers"/>

        <!-- <version>xxx</version> -->
        <replaceregexp byline="true" flags="m">
            <regexp pattern='^(    \074version\076)(.*)(\074/version\076)$'/>
            <substitution expression='\1${ezp.version.alias}.${ezp.version.release}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*package.xml"/>
        </replaceregexp>

        <!-- <named-version>xxx</named-version> -->
        <replaceregexp byline="true" flags="m">
            <regexp pattern='^(    \074named-version\076)(.*)(\074/named-version\076)$'/>
            <substitution expression='\1${ezp.version.alias}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*package.xml"/>
        </replaceregexp>

        <!-- <package version="zzzz" -->
        <replaceregexp byline="true">
            <regexp pattern='^(\074package version=")(.*)(")$'/>
            <substitution expression='\1${ezwebin.version.major}.${ezwebin.version.minor}-${ezwebin.version.release}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*package.xml"/>
        </replaceregexp>

        <!-- <number>xxxx</number> -->
        <replaceregexp byline="true">
            <regexp pattern='^(    \074number\076)(.*)(\074/number\076)$'/>
            <substitution expression='\1${ezwebin.version.alias}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*package.xml"/>
        </replaceregexp>

        <!-- <release>yyy</release> -->
        <replaceregexp byline="true">
            <regexp pattern='^(    \074release\076)(.*)(\074/release\076)$'/>
            <substitution expression='\1${ezwebin.version.release}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*package.xml"/>
        </replaceregexp>

    </target>

    <!-- Updates ezinfo.php with correct version numbers -->
    <target name="update-ezinfo-php">
        <echo message="Updating ezinfo.php"/>

        <replaceregexp byline="true" flags="i">
            <regexp pattern="^([\s]+\047version\047[\s]+=>[\s]+\047)(.*)(\047,)$"/>
            <substitution expression='\1${ezwebin.version.alias}-${ezwebin.version.release}\3'/>
            <fileset dir="${ezwebin.build.dir}" includes="**/*ezinfo.php"/>
        </replaceregexp>
    </target>

    <!-- Updates the license headers with correct version numbers -->
    <!-- Updates the // SOFTWARE RELEASE line                     -->
    <!-- Updates the // COPYRIGHT NOTICE line                     -->
    <target name="update-license-headers">
        <echo message="Updating license headers"/>

        <!-- SOFTWARE RELEASE -->
        <replaceregexp byline="true">
            <regexp pattern="// SOFTWARE RELEASE: (.*)"/>
            <substitution expression="// SOFTWARE RELEASE: ${ezwebin.version.alias}-${ezwebin.version.release}"/>
            <fileset dir="${ezwebin.build.dir}">
                <include name="**/*.php"/>
            </fileset>
        </replaceregexp>

        <!-- COPYRIGHT NOTICE -->
        <replaceregexp byline="true">
            <regexp pattern="// COPYRIGHT NOTICE: Copyright \(C\) 1999-[\d]{4} eZ Systems AS"/>
            <substitution expression="// COPYRIGHT NOTICE: Copyright (C) 1999-${date.current.year} eZ Systems AS"/>
            <fileset dir="${ezwebin.build.dir}">
                <include name="**/*.php"/>
            </fileset>
        </replaceregexp>
    </target>

    <!-- called by build -->
    <target name="run-ezpxmlfilelist-php">
        <echo message="Building XML file list for extension ${extension.name}"/>
        <exec executable="${php.cli.executable.path}" failonerror="true">
            <arg value="./bin/ezpxmlextfilelist.php"/>
            <arg value="-e"/>
            <arg value="${ezwebin.build.dir}/packages/${extension.name}/ezextension/${extension.short.name}"/>
            <arg value="-n"/>
            <arg value="${extension.short.name}"/>
            <redirector output="${ezwebin.build.dir}/packages/${extension.name}/ezextension/extension-${extension.short.name}.xml" append="false"/>
        </exec>
    </target>

    <!-- called by target dist -->
    <target name="create-package-tarball">
        <echo message="Building ${package.name}.ezpkg"/>
        <!-- Switched to the system tar command                             -->
        <!-- Ref : https://issues.apache.org/bugzilla/show_bug.cgi?id=47653 -->
        <exec executable="./ant/createzpkg.sh">
            <arg value="${ezwebin.build.dir}/packages/${package.name}"/>
            <arg value="${ezwebin.build.dir}/${package.name}"/>
        </exec>
    </target>

    <target name="-build-external">
        <delete dir="${ezwebin.build.dir}/packages"/>

        <get src="${external.dependancy.build.file.url}"
             dest="externalbuild.xml"/>

        <get src="${external.dependancy.properties.file.url}"
             dest="ant/${external.dependancy.properties.file.name}"/>

        <ant antfile="externalbuild.xml"
             dir="."
             target="all"
             inheritAll="true"/>

        <delete file="ant/${external.dependancy.properties.file.name}"/>

        <delete file="externalbuild.xml"/>
    </target>
    <!-- ============================================================= -->
    <!-- end of low level ( private ) targets, for internal usage ONLY -->
    <!-- ============================================================= -->

</project>